<div class="w-full">
  <%= render 'notice' %>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
    Product Catlog
  </h1>
  <%= turbo_stream_from 'products' %>

  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>

  </ul>

</div>
